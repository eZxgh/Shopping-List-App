<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingList">

    <TabBar>
        <ShellContent
            Title="Shopping List"
            ContentTemplate="{DataTemplate views:MainListPage}"
            Route="MainPage" />

        <ShellContent
            Title="Sorted Products"
            ContentTemplate="{DataTemplate views:SortedProducts}"
            Route="MainPage" />
        
        <ShellContent
            Title="Category View"
            ContentTemplate="{DataTemplate views:CategoryView}"
            Route="MainPage" />

        <ShellContent
            Title="Add Category"
            ContentTemplate="{DataTemplate views:CategoryAdd}"
            Route="MainPage" />
    </TabBar>
</Shell>
